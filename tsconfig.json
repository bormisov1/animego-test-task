{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": [
      "dom",
      "esnext.asynciterable",
      "es2015.iterable"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "pretty": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "paths": {
      "@common": [
        "./common/*"
      ],
      "@core": [
        "./core/*"
      ],
      "@database": [
        "./database/*"
      ],
      "@loaders": [
        "./loaders/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/*.ts",
    "./src/public/.gitignore",
    "./src/**/*.ts",
    "./src/**/**/*.ts",
    "./src/**/**/**/*.ts",
    "./src/**/**/**/**/*.ts"
  ]
}
